<launch>
  <arg default="$(find quadrapod_description)/urdf/quadrapod.xacro" name="model"/>
  <arg default="$(find quadrapod_description)/launch/urdf.rviz" name="rvizconfig"/>
  
  <param command="$(find xacro)/xacro $(arg model)" name="robot_description"/>
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui"
  	type="joint_state_publisher_gui"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  <node args="-d $(arg rvizconfig)" name="rviz" pkg="rviz" required="true" type="rviz"/>
</launch>
